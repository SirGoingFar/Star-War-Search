<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.trivago.starwarsearch">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".StarWarSearchApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".views.activity.species.SpecieDetailHostActivity"
            android:label="@string/text_specie_detail" />
        <activity
            android:name=".views.activity.species.SpeciesHostActivity"
            android:label="@string/text_species" />
        <activity
            android:name=".views.activity.movie.MovieDetailHostActivity"
            android:label="@string/text_movie_detail" />
        <activity
            android:name=".views.activity.movie.MovieHostActivity"
            android:label="@string/text_movies" />
        <activity
            android:name=".views.activity.character_search.CharacterSearchHostActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".views.activity.character_detail.CharacterDetailHostActivity"
            android:label="@string/text_character_detail" />
    </application>

</manifest>